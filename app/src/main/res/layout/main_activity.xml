<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65F6E88C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Syrniki.kz"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="316dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/syrnikikz"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="347dp"
        android:layout_height="65dp"
        android:layout_marginBottom="176dp"
        android:ems="10"
        android:text="Адрес: Алматы, Розыбакиева, 247а, ТРЦ Мега Алматы, фуд-корт"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Phone"
        android:layout_width="346dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="phone"
        android:text="Тел.:87010391333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="398dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="255dp"
        android:layout_height="47dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="488dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="83dp"
        android:layout_height="149dp"
        android:layout_marginEnd="5dp"
        android:text="Сырники с клубникой, вишней, кокосом"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="97dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
